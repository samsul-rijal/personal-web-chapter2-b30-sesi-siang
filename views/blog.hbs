<html>
  <head>
    <title>Creating Blog Page</title>

    <link rel="stylesheet" href="../public/assets/css/styleDay7.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="../public/assets/css/style.css">
    </head>
    <body>

      <!-- Navbar -->
      <nav class="navbar navbar-expand-sm navbar-light bg-light">
          <div class="container">
              <a class="navbar-brand" href="#"><img src="../public/assets/images/logo.png" alt="logo"></a>
              
              <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
              </button>
              
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
          
                  <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                      <li class="nav-item">
                          <a class="nav-link" aria-current="page" href="/">Home</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link active text-orange" aria-current="page" href="/blog">Blog</a>
                      </li>
                  </ul>

                  {{#if isLogin}}

                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <span class="nav-link" aria-current="page">Hallo, {{user.name}}</span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/logout">Logout</a>
                        </li>
                    </ul>

                  {{else}}
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                      <li class="nav-item">
                          <a class="nav-link" aria-current="page" href="/register">Register</a>
                      </li>
                      <li class="nav-item">
                          <a class="nav-link" aria-current="page" href="/login">Login</a>
                      </li>
                    </ul>


                  {{/if}}


                  
              
                  <a class="btn px-3 text-white bg-orange ms-5" type="submit">Contact Me</a>
            
              </div>
          </div>
      </nav>
      <!-- Akhir Navbar -->

      {{#if messages.success}}
        <div class="alert alert-success" role="alert">
            {{messages.success}}
        </div>
      {{/if}}

    <!-- Blog -->
    <!-- Form -->
    <div class="blog">
      {{#if isLogin}}
        <div style="text-align: right; margin-right: 130px; margin-top: 50px">
          <a href="/add-blog" style="background-color: orangered; padding: 10px 20px; border-radius: 5px; text-decoration: none; color: white">Add New Blog</a>
        </div>
      {{/if}}

      <div id="contents" class="blog-list">
        <!-- dynamic content would be here -->
        {{#each blogs}}
          <div class="blog-list-item">
            <div class="blog-image">
              <img src="../public/assets/images/blog-img.png" alt="" />
            </div>
            <div class="blog-content">

              {{#if isLogin}}
                <div class="btn-group"> 
                  <a href="#" class="btn-edit">Edit Post</a>
                  <a href="/delete-blog/{{this.id}}" class="btn-post">Delete Blog</a>
                </div>
              {{/if}}

              <h1>
                <a href="/blog-detail/{{this.id}}" target="_blank"
                  >{{this.title}}</a
                >
              </h1>
              <div class="detail-blog-content">
                {{this.postAt}} | {{this.author}}
              </div>
              <p>
                {{this.content}}
              </p>

              <div style="text-align: right;">
                  <span style="font-size: 13px; color: grey">
                    {{this.distance}}
                  </span>
              </div>

            </div>
          </div>
        {{/each}}


      </div>
    </div>
    <script src="blog.js"></script>
  </body>
</html>
